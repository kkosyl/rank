@model Ranking.GUI.ViewModels.Places.PlaceDetailsViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/GalleryJssor.js"></script>
<div class="midContent">

    <div class="detailsTop">
        <span class="detailsName">@Model.Name</span>
        <span class="doubleGrade"><span class=" glyphicon glyphicon-star"></span> @Model.Rate</span>
        @if (Model.Verified)
        {
            <img src="~/Content/Images/Approved.png" alt="To miejsce nie jest potwierdzone"/>
        }
        else
        {
            <img src="~/Content/Images/NoApproved.png" style="opacity: 0.1"/>
        }

    </div>
    <div class="details">
        <div class="contact">
            <span class="capital">Kontakt:</span><br />
            <ul>
                <li><b>&rsaquo;&nbsp;Kraj: </b>@Model.Country</li>
                <li><b>&rsaquo;&nbsp;Miasto: </b>@Model.City</li>
                <li><b>&rsaquo;&nbsp;Ulica: </b>@Model.Address</li>
                <li><b>&rsaquo;&nbsp;Tel: </b>@Model.Telephone</li>
            </ul>

        </div>

        <div class="gallery">
            <span class="capital">Galeria:</span><br />

            @foreach (var item in Model.Picture)
            {
                <a tabindex="1"><img src="~/@item" /></a>
            }
            <span class="close"></span>
        </div>
    </div>

    <div class="description">
        <span class="capital">Opis:</span><br />
        @Model.Description
    </div>

    @{Html.RenderAction("AddOpinion", "Place", new { id = Model.PlaceId });}
    @{Html.RenderAction("Opinions", "Place", new { id = Model.PlaceId });}

</div>



