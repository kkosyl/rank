@model Ranking.GUI.ViewModels.PlaceDetailsViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<div>
    @Html.ActionLink("Usuń", "Delete", new { id = Model.PlaceId })
</div>
<div>
    @Html.ActionLink("Wróć", "Index")
</div>


@Model.Country
<br />
@Model.Description
<br />
<div id="carousel-generic" class="carousel slide" data-ride="carousel">

    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Picture.Count(); i++)
        {
            <li data-target="#carousel-generic" data-slide-to="@i" class="@(i == 0 ? "active" : string.Empty)"></li>
        }
    </ol>
    <div class="carousel-inner">
        @{
            var j = 0;
            foreach (var item in Model.Picture)
            {
                var itemClass = j++ == 0 ? "active" : "";
                <div class="item @itemClass">
                    <img src="~/@item" />
                </div>
            }
        }
    </div>

    <a class="left carousel-control" href="#carousel-generic" data-slide="prev">
        <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#carousel-generic" data-slide="next">
        <span class="icon-next"></span>
    </a>

</div>

<br />

@{Html.RenderAction("AddOpinion", "Place", new { id = Model.PlaceId });}

<br />
@if (Model.Opinions != null)
{
    foreach (var item in Model.Opinions)
    {
        @item.Key
        <br />
        @item.Value.Grade
        <br />
        @item.Value.Content
    }
}



