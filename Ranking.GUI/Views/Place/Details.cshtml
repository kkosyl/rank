@model Ranking.GUI.ViewModels.PlaceDetailsViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/GalleryJssor.js"></script>
<div class="midContent">

    <span class="detailsName">@Model.Name</span>



    <div class="details">
        <div class="contact">
            <span class="capital">Kontakt:</span><br />
            <ul>
                <li><b>&rsaquo;&nbsp;Kraj: </b>@Model.Country</li>
                <li><b>&rsaquo;&nbsp;Miasto: </b>@Model.City</li>
            </ul>

        </div>

        <div class="gallery">
            <span class="capital">Galeria:</span><br />

            @foreach (var item in Model.Picture)
            {
                <a tabindex="1"><img src="~/@item" /></a>
            }
            <span class="close"></span>
        </div>
    </div>

    <div class="description">
        <span class="capital">Opis:</span><br />
        @Model.Description
    </div>

    @{Html.RenderAction("AddOpinion", "Place", new { id = Model.PlaceId });}

    <div class="showOpinions">
        @foreach (var item in Model.Opinions)
        {
            <div class="opinion">
                <table>
                    <tr>
                        <td>
                            <b>@item.Value.User.Nick</b><br />
                            @item.Value.AddDate.ToString("d") <br />
                            <span id="grade">@item.Value.Grade</span><br />
                            <td>@item.Value.Content</td>
                        </td>
                    </tr>
                </table>
            </div>
            <hr />
        }
    </div>

</div>



