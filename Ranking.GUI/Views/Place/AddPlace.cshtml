@model Ranking.GUI.ViewModels.Places.AddPlaceViewModel

@{
    ViewBag.Title = "Dodaj - myBestPlace";
}

<span class="capital">Dodaj swoje miejsce</span>

<div class="descriptionView">
    @using (Html.BeginForm("AddPlace", "Place", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="addLabel">
            <div>
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @required = "required" })
            </div>

            <div>
                @Html.LabelFor(m => m.City)
                @Html.TextBoxFor(m => m.City, new { @required = "required" })
            </div>

            <div>
                @Html.LabelFor(m => m.Address)
                @Html.TextBoxFor(m => m.Address, new { @required = "required" })
            </div>

            <div>
                @Html.LabelFor(m => m.Telephone)
                @Html.TextBoxFor(m => m.Telephone, new {@type="tel", @required = "required" })
            </div>

            <div>
                @Html.LabelFor(m => m.Country)
                @Html.TextBoxFor(m => m.Country, new { @required = "required" })
            </div>



            <div>
                <br />
                @Html.LabelFor(m => m.Picture)
                @Html.TextBoxFor(m => m.Picture, new { type = "file", multiple = "true" })
            </div>


        </div>

        <div id="descript">
            @Html.LabelFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, new { @required = "required" })

        </div>
        <input type="submit" value="Dodaj" class="btn btn-default" />

    }
</div>

