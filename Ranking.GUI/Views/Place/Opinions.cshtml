@using Ranking.GUI.ViewModels
@model IList<OpinionsViewModel>
<div class="showOpinions">
    @foreach (var item in Model)
    {
        <div class="opinion">
            <table>
                <tr>
                    <td>
                        <b>@item.UserNickname</b><br />
                        @item.AddDate.ToString("d") <br />
                        <span id="grade">
                            <input class="rating" value="@item.Rate" data-disabled="true">
                        </span><br />
                    <td>@item.Content</td>
                    </td>
                </tr>
            </table>
        </div>
        <hr />
    }
</div>

