@model Ranking.GUI.ViewModels.Admin.LogInViewModel
@{
    ViewBag.Title = "Admin Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<span class="capital">@ViewBag.Title</span>

@if (!User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("LogIn", "Admin", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="addLabel">
            @Html.LabelFor(m => m.Login)
            @Html.TextBoxFor(m => m.Login)

            <br />

            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password)
            <br />
            <input type="submit" value="Zaloguj" class="btn btn-default" />
        </div>
    }
}
else
{
    <div class="col-md-offset-2 col-md-10">
        <input type="button" value="Wyloguj" class="btn btn-default" onclick="window.location.href='@Url.Action("LogOff", "Admin")'" />
    </div>
}
